<h4 class="text-success">Order Details</h4>

<div class="container border" style="height:100px; background-color:aliceblue">
    <div class="col-12">
        <div class="row" style="padding-top: 10px;">
            <div class="col-sm-2">
                Full Name
            </div>
            <div class="col-sm-3">
                <input class="form-control" disabled asp-for="@Model.CustomerName" />
            </div>
            <div class="col-sm-1">

            </div>
            <div class="col-sm-2">
                Phone
            </div>
            <div class="col-sm-4">
                <input class="form-control" disabled asp-for="@Model.CustomerPhoneNumber" />
            </div>
        </div>

        <div class="row" style="padding-top: 10px;">
            <div class="col-sm-2">
                Email
            </div>
            <div class="col-sm-3">
                <input class="form-control" disabled asp-for="@Model.CustomerEmail" />
            </div>
            <div class="col-sm-1">

            </div>
            <div class="col-sm-2">
               Date Ordered
            </div>
            <div class="col-sm-4">
                <input class="form-control" disabled asp-for="@Model.Date" />
            </div>
        </div>
    </div>
</div>