@model ShopDaki.Models.ViewModel.OrderDetailsViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="get">
    <br />
    <h2 class="text-info">Order Details</h2>
    <br />

    <div style="height:150px; background-color:aliceblue" class="container">
        @*We will add search criteria*@
        <div class="col-12">
            <div class="row" style="padding-top: 10px;">
                <div class="col-sm-2">
                    Customer Name
                </div>
                <div class="col-sm-3">
                    @Html.Editor("searchName", new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-sm-2">

                </div>
                <div class="col-sm-2">
                    Email
                </div>
                <div class="col-sm-3">
                    @Html.Editor("searchEmail", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="row" style="padding-top: 10px;">
                <div class="col-sm-2">
                    Phone Number
                </div>
                <div class="col-sm-3">
                    @Html.Editor("searchPhone", new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-sm-2">

                </div>
                <div class="col-sm-2">
                    Date Ordered
                </div>
                <div class="col-sm-3">
                    @Html.Editor("searchDate", new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                </div>
            </div>

            <div class="row" style="padding-top: 10px;">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-3">
                </div>
                <div class="col-sm-2">
                </div>
                <div class="col-sm-2">
                </div>
                <div class="col-sm-3">
                    <button class="btn btn-primary form-control" type="submit" name="submit" value="Search">
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>
            </div>
        </div>
    </div>
    <br /> <br />

    <div>
        <table class="table table-striped borderx">
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(m => m.Orders.FirstOrDefault().SalesPerson.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Orders.FirstOrDefault().Date)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Orders.FirstOrDefault().CustomerName)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Orders.FirstOrDefault().CustomerEmail)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Orders.FirstOrDefault().CustomerPhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Orders.FirstOrDefault().Status)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Orders)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.SalesPerson.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.CustomerName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.CustomerEmail)
                    <td>
                        @Html.DisplayFor(m => item.CustomerPhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Status)
                    </td>
                    <partial name="_TableViewPartial" model="@item.OrderID" />
                </tr>
            }
        </table>
    </div>

    <div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true"
         page-class="btn border"
         page-class-normal="btn btn-default active"
         page-class-selected="btn btn-primary active" class="btn-group m-1">

    </div>
</form>


