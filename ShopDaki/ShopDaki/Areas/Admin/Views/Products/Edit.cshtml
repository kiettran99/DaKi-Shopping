@model ShopDaki.Models.ViewModel.ProductsViewModel
@using ShopDaki.Extensions;
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info pb-2">Edit Product</h2>

<form method="post" enctype="multipart/form-data" asp-action="Edit">
    <div class="p-4 border rounded row">
        <input type="hidden" asp-for="Product.ProductID" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.Product.Name"></label>
                </div>
                <div class="col-8">
                    <input type="text" class="form-control" asp-for="Product.Name" />
                </div>
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.Status"></label>
                </div>
                <div class="col-8">
                    <input class="form-control" asp-for="Product.Status" />
                </div>
            </div>
            <br />
            <br />
            <div class="form-group row">
                <div class="col-4"> 
                    <label asp-for="Product.Images"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="files" multiple class="from form-control" />
                </div>
            </div>
            <br />
            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="GroupProducts"></label>
                </div>
                <div class="col-8">
                    <select asp-for="@Model.Product.GroupProductID" asp-items="Model.GroupProducts.ToSelectListItem(Model.Product.GroupProductID)" class="form-control"></select>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.Date"></label>
                </div>
                <div class="col-8">
                    <input class="form-control" asp-for="Product.Date" />
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.Price"></label>
                </div>
                <div class="col-8">
                    <input class="form-control" asp-for="Product.Price" />
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.Detail"></label>
                </div>
                <div class="col-8">
                    <input class="form-control" asp-for="Product.Detail" />
                </div>
            </div>
            <br />
        </div>

        <div class="col-1"></div>

        <div class="col-3">
            <img src="@Model.Product.Images" alt="@nameof(@Model.Product.Images)" width="100%" style="border-radius: 5px; border: 1px Solid #bbb9b9;" />
        </div>

        <div class="form-group">
            <input asp-route-id="@Model.Product.ProductID" class="btn btn-primary" type="submit" value="Update" />
            <a class="btn btn-success" asp-action="Index">Back to list</a>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

