@model ShopDaki.Models.GroupProduct
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info pb-2">Edit Group Product</h2>

<form method="post" asp-action="Edit">
    <div class="p-4 border rounded">
        <input type="hidden" asp-for="GroupProductID"/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" asp-for="Name" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Image"></label>
            </div>
            <div class="col-5">
                <input class="form-control" asp-for="Image" />
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Status"></label>
            </div>
            <div class="col-5">
                <input class="form-control" asp-for="Status" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <input asp-route-id="@Model.GroupProductID" class="btn btn-primary" type="submit" value="Update" />
            <a class="btn btn-success" asp-action="Index">Back to list</a>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}