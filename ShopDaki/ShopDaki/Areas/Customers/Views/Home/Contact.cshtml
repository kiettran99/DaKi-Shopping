@model ShopDaki.Models.Contact
@{
    ViewData["Title"] = "Contact";
}
<section class="pt-7 pb-12">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <!-- Heading -->
                <h3 class="m-5 text-center text-secondary">Contact Us</h3>
            </div>
        </div>
        <div class="row justify-content-between">
            <div class="col-12 col-md-4 col-xl-3">
                <aside class="mb-9 mb-md-0">

                    <!-- Heading -->
                    <h6 class="mb-6">
                        <i class="fa fa-phone text-primary mr-4"></i> Call to Us:
                    </h6>

                    <!-- Text -->
                    <p class="text-gray-500">
                        We're available from 10 am - 10 pm EST,
                        7 days a week.
                    </p>
                    <p>
                        <strong>Customer Service:</strong><br>
                        <a class="text-gray-500" href="tel:60146-389-574">6-146-389-574</a>
                    </p>
                    <p class="mb-0">
                        <strong>Careers:</strong><br>
                        <a class="text-gray-500" href="tel:60146-389-574">6-146-389-574</a>
                    </p>

                    <!-- Divider -->
                    <hr>

                    <!-- Heading -->
                    <h6 class="mb-6">
                        <i class="fa fa-envelope text-primary mr-4"></i> Write to Us:
                    </h6>

                    <!-- Text -->
                    <p class="text-gray-500">
                        Fill out our form and we will contact you
                        within 24 hours.
                    </p>
                    <p>
                        <strong>Customer Service:</strong><br>
                        <a class="text-gray-500" href="mailto:customer@example.com">customer@example.com</a>
                    </p>
                    <p class="mb-0">
                        <strong>Careers:</strong><br>
                        <a class="text-gray-500" href="mailto:careers@example.com">careers@example.com</a>
                    </p>

                    <!-- Divider -->
                    <hr>

                    <!-- Heading -->
                    <h6 class="mb-6">
                        <i class="fa fa-envelope text-primary mr-4"></i> Find Us:
                    </h6>

                    <!-- Text -->
                    <p class="mb-0 text-gray-500">
                        Want to visit our Offline Stores?
                    </p>

                    <!-- Button -->
                    <p class="mb-0">
                        <a class="btn btn-link px-0 text-body" href="#Map-ShopDaKi">
                            Go to Store Locator <i class="fa fa-arrow-right ml-2"></i>
                        </a>
                    </p>

                </aside>
            </div>
            <div class="col-12 col-md-8">
                <!-- Form -->
                <form method="post" asp-action="Contact">

                    <!-- Email -->
                    <div class="form-group">
                        <label class="sr-only" for="contactName">
                            Your Name *
                        </label>
                        <input class="form-control" asp-for="@Model.Address" id="contactName" type="text" placeholder="Your Name *" required="">
                    </div>

                    <!-- Email -->
                    <div class="form-group">
                        <label class="sr-only" for="contactEmail">
                            Your Email *
                        </label>
                        <input class="form-control" asp-for="@Model.Mail" id="contactEmail" type="email" placeholder="Your Email *" required="">
                    </div>

                    <!-- Email -->
                    <div class="form-group">
                        <label class="sr-only" for="contactTitle">
                            Title *
                        </label>
                        <input class="form-control" asp-for="@Model.Name" id="contactTitle" type="text" placeholder="Title *" required="">
                    </div>

                    <!-- Email -->
                    <div class="form-group mb-7">
                        <label class="sr-only" for="contactMessage">
                            Message *
                        </label>
                        <textarea asp-for="@Model.Detail"class="form-control" id="contactMessage" rows="5" placeholder="Message *" required=""></textarea>
                    </div>

                    <!-- Button -->
                    <button class="btn btn-dark" type="submit">
                        Send Message
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>
